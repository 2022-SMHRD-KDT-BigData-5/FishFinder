<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.smhrd.mapper.userCountMapper">
    
    
    <!-- 총방문자 수 증가를 위해 현재 날짜 추가 -->
    <insert id="setTotalCount" parameterType="com.smhrd.domain.VisitSessionListener">
        insert into visit (v_date) values(sysdate)
    </insert>
    
    <!-- 총 방문자수 가져오기 -->
    <select id='getTotalCount' resultType="com.smhrd.domain.VisitSessionListener">
        select count(*) as TotalCnt from visit
    </select>

    <!-- 오늘 방문자수 가져오기 -->
    <select id="getTodayCount" resultType="com.smhrd.domain.VisitSessionListener">
        select count(*) as todaycnt from visit
        where to_date(v_date, 'YYYY-MM-DD')=to_date(sysdate, 'YYYY-MM-DD')");
    </select>

    
    
    
</mapper>